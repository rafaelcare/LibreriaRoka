<p id="notice"><%= notice %></p>

<%= form_for(@order) do |f| %>

<div id="datosClient">
  <fieldset>
  <legend>Datos del cliente</legend>
    <%= f.text_field :client_id, :readonly=>"true"  %>

    <%= fields_for @order.client do |c| %>
      <%= c.hidden_field :id %>
      <%= c.text_field :rfc, :placeholder => "RFC del cliente", :readonly=>"true"  %>
      <%= c.text_field :nombre, :placeholder => "Nombre del cliente", :readonly=>"true"  %>
      <%= c.text_field :apellidos, :placeholder => "Apellidos del cliente", :readonly=>"true"  %>
      <%= c.text_field :direccion, :placeholder => "Domicilio", :readonly=>"true"  %>
      <%= c.text_field :email, :placeholder => "Email del cliente", :readonly=>"true"  %>
      <%= c.text_field :telefono, :placeholder => "Teléfono del cliente", :readonly=>"true"  %>
      <%= c.text_field :facebook, :placeholder => "Facebook del cliente", :readonly=>"true"  %>
      <%= c.text_field :lynkedin, :placeholder => "Lynkedin del cliente", :readonly=>"true"  %>
    <% end %>
  </fieldset>
</div>

  <table id="detallesOrderTable" cellspacing="0">
    <thead>
      <th>Clave</th>
      <th>Descripción</th>
      <th>P. Unidad</th>
      <th>Cantidad</th>
      <th>Descuento x libro</th>
      <th>Importe</th>
    </thead>
    <tbody>
      <% @order.orderDetails.each do |item| %>
        <%= f.fields_for :orderDetails, item do |d| %>
          <tr>
            <td><%= d.text_field :product_id, :readonly=>"true" %></td>
                <%= fields_for item.product do |p| %>
                  <td><%= p.text_field :nombre, :readonly=>"true" %></td>
                <% end %>
            <td><%= d.text_field :preciounitario, :readonly=>"true" %></td>
            <td><%= d.text_field :cantidad, :readonly=>"true" %></td>
            <td><%= d.text_field :descuento, :readonly => "true" %></td>
            <td><%= d.text_field :importetotal, :readonly=>"true" %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
    <tfoot>
      <th colspan="2">Total de artículos:</th>
      <th id="totalArts"></th>
      <th>Importe total:</th>
      <th id="importeTotalVenta"></th>
      <th><%#= f.text_field :importetotal, :readonly=> true %></th>
    </tfoot>
  </table>
</div>
  <div class="actions">
    
  </div>
<% end %>


