<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.Productos' %></h1>     
  </form> 
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <%#<th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:isbn) %></th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:cantidad) %></th>
      <th><%= model_class.human_attribute_name(:precio) %></th>
      <th><%= model_class.human_attribute_name(:category_id) %></th>
      <th><%=t '.acciones', :default => t("helpers.acciones") %></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <%#<td><%= link_to product.id, product_path(product) %></td>
        <td><%= product.isbn %></td>
        <td><%= product.nombre %></td>
        <td><%= product.cantidad %></td>
        <td><%= product.precio %></td>
        <td><%= product.category_id %></td>
        <td>
          <%= link_to t('.Editar', :default => t("helpers.links.Editar")),
                      edit_product_path(product), :class => 'btn btn-mini' %>
          <%= link_to t('.Eliminar', :default => t("helpers.links.Eliminar")),
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.Agregar Producto', :default => t("helpers.links.Agregar Producto")),
            new_product_path,
            :class => 'btn btn-primary' %>

