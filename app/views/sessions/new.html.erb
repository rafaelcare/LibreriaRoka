<%= form_tag sessions_path, :html => { :class=>'form-horizontal' } do %>  
  
  <div class="control-group">
    <%= label_tag :Nombre_de_usuario %>
    <div class="controls">
      <%= text_field_tag :username, params[:username], :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= label_tag :password %>
    <div class="controls">
      <%= password_field_tag :password%>
    </div>
  </div>
  <div class="field">
    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
    <%= label_tag :remember_me %>
  </div>
  <div class="form-actions"><%= submit_tag "Log in", :class=>'btn btn-primary' %></div>
<% end %>